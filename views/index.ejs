<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="css/style.css">
  </head>
  <body>
    <div class='design'>
      <h3 class="text-center"></h3>
      <div class="form-group">
        <%- include('partials/messages.ejs') %>
        <form action="/" method="POST">
          <input
            name="city"
            placeholder="Enter a city"
            class="form-control"
            type="text"
          />
          <button type="submit" class="btn mt-3 btn-outline-danger btn-block">
            SEARCH
          </button>
        </form>

        <div class="mt-5">
          <h2 class="text-center">Results</h2>
          <div>
            <h5><span> <%-lat%> </span> <span> <%-lon%></span></h5>
            <h3><%-temp%></h3>
            <h1><%-location%></h1>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
